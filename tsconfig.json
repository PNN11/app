{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": ".",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "strict": false,
        "strictBindCallApply": true,
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "utils/math/times/times.test.ts",
        "utils/math/sum/sum.test.ts",
        "pages/_document.tsx"
    ],
    "exclude": [
        "./node_modules",
    ]
}